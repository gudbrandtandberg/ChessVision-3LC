{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Train Piece Classifier",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train/train_classifier.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--compute-embeddings",
                "--description", "",
                "--run-name", "",
                // "--run-tests",
                // "--use-sample-weights",
            ]
        },
        {
            "name": "Train Segmentation Model",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train/train_unet.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--learning-rate", "0.000001",
                "--amp",
                "--run-tests",
                "--run-description", "",
                "--use-sample-weights",
                "--seed", "42",
                "--deterministic",
            ]
        },
        {
            "name": "Run test suite",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/chessvision/test/test.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--project-name", "chessvision-testing",
                "--threshold", "0.5",
            ]
        },
        {
            "name": "Run Web Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/webroot/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--local", "server"
            ],
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "FLASK_USE_RELOADER": "False"
            }
        },
        {
            "name": "Run Compute Endpoint",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/computeroot/cv_endpoint.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--local"
            ],
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "FLASK_USE_RELOADER": "False",
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
    ],
    "compounds": [
        {
            "name": "Full Stack (Compound)",
            "configurations": ["Run Web Server", "Run Compute Endpoint"],
            "env": {
                "FLASK_USE_RELOADER": "False"
            }
        }
    ]
} 